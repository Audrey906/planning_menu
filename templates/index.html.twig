<!DOCTYPE html>

<html>  
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="Audrey Thirard">

        <!-- Bootstrap core CSS -->
        <script src="https://kit.fontawesome.com/8a9e68092d.js" crossorigin="anonymous"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        {% block title %}Hello Controller!{% endblock %}
    </head>
    <body class="bg-light">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand text-info" href="{{ path('planning') }}">Planning</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            <li class="nav-item px-2"><a class="nav-link text-info" href="{{ path('planning') }}">Planning</a></li>
                            <li class="nav-item px-2">
                                <div class="dropdown">
                                    <button class="btn text-info dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Mon compte
                                    </button>
                                    <ul class="bg-dark dropdown-menu" aria-labelledby="dropdownMenuUser">
                                        <li><a class="nav-link text-info" href="{{ path('profil') }}">Profil</a></li>
                                        <li><a class="nav-link text-info" href="{{ path('dish_index') }}">Plat</a></li>
                                        <li><a class="nav-link text-info" href="{{ path('planning_list') }}">Menu</a></li>
                                    </ul>
                                </div>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item px-2">
                                    <div class="dropdown">
                                        <button class="btn text-info dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        Gestion
                                        </button>
                                        <ul class="dropdown-menu bg-dark" aria-labelledby="dropdownMenuUser">
                                            <li><a class="nav-link text-info" href="{{ path('day_index') }}">Jours</a></li>
                                            <li><a class="nav-link text-info" href="{{ path('category_index') }}">Categorie</a></li>
                                            <li><a class="nav-link text-info" href="{{ path('period_index') }}">Période</a></li>
                                            <li><a class="nav-link text-info" href="{{ path('dish_index_all') }}">Plats</a></li>
                                            <li><a class="nav-link text-info" href="{{ path('user_index') }}">Users</a></li>
                                        </ul>
                                    </div>
                                </li>
                            {% endif %}
                            <li class="nav-item px-2 btnLogout"> <a class="btn nav-link text-danger" href="{{ path('app_logout') }}">Déconnexion</a>

                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link text-info" href="{{ path('app_register') }}">Créer un compte</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-info" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container-fluid mt-5 pt-5">
{% block body %}

{% endblock %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</html>

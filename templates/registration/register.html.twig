{% extends 'index.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12 offset-md-3 col-md-6 d-flex justify-content-center flex-column">
            <h1>Cr√©er un compte</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.pseudo) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button class="btn btn-success btn-sm btnStandard" type="submit">
                    <i class="fa-solid fa-floppy-disk fa-xs mx-1"></i>
                    <p class="mobile_show"> </p>
                    <span class="desktop_show">Enregistrer</span>
                </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}

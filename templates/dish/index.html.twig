{% extends 'index.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <h1>Dish index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dish_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dish in dishes %}
            <tr>
                <td>{{ dish.id }}</td>
                <td>{{ dish.dishName }}</td>
                <td class="d-flex">
                    <button class="btn" style="width:75px"><a href="{{ path('dish_show', {'id': dish.id}) }}">show</a></button>
                    <button class="btn" style="width:75px">
                    {% if app.user.id is same as dish.user.id %}
                        <a href="{{ path('dish_edit', {'id': dish.id}) }}">edit</a>
                    {% endif %}
                    </button>
                    {{ include('dish/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dish_new') }}">Create new</a>
{% endblock %}

{% extends 'index.html.twig' %}

{% block title %}Dish index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Liste des repas</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Repas</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for dish in dishes %}
                <tr>
                    <td>{{ dish.dishName|capitalize }}</td>
                    <td class="d-flex">
                        <button class="btn" style="width:75px"><a href="{{ path('dish_show', {'id': dish.id}) }}">Voir</a></button>
                        <button class="btn" style="width:75px">
                        {% if app.user.id is same as dish.user.id %}
                            <a href="{{ path('dish_edit', {'id': dish.id}) }}">Modifier</a>
                        {% endif %}
                        </button>
                        {{ include('dish/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    

    <a href="{{ path('dish_new') }}">Create new</a>
{% endblock %}

<td>
    {% for cat in categories %}
    <div class="d-flex">
        <select class="form-select" id="{{cat.categoryName}}" name="{{ numberWeek|default(1) }}_2_{{ numberDay|default(1) }}_{{cat.id}}">
            <option>{{cat.categoryName}}</option>
            {% for dish in dishes %}
                {% if dish.category.id == cat.id %}
                <option value="{{dish.id}}">{{dish.dishName}}</option>
                {% endif %}
            {% endfor %}
        </select>        
    </div>
    {% endfor %}
</td>